{
  "name": "XCDaaS",
  "version": "0.1.0",
  "description": "XMPP Connection Discovery as a Service",
  "scripts": {
    "start": "npm run start-watch",
    "start-watch": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.7.4",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,css,md}": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
